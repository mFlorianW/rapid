{
    "version": 2,
    "configurePresets": [
        {
            "name": "base",
            "generator": "Ninja",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}-install",
                "ENABLE_BOOST": "ON"
            }
        },
        {
            "name": "base-vcpkg",
            "inherits": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "ENABLE_VCPKG": "ON"
            }
        },
        {
            "name": "base-debug",
            "inherits": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_TEST": "ON"
            }
        },
        {
            "name": "base-debug-vcpkg",
            "inherits": "base-debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "ENABLE_VCPKG": "ON"
            }
        },
        {
            "name": "debug",
            "inherits": "base-debug",
            "displayName": "debug configure preset",
            "description": "Debug build"
        },
        {
            "name": "debug-vcpkg",
            "inherits": "base-debug",
            "displayName": "debug configure preset",
            "description": "Debug build"
        },
        {
            "name": "github",
            "inherits": "base-debug-vcpkg",
            "displayName": "Github CI configure preset",
            "description": "Debug build for the Github CI",
            "generator": "Unix Makefiles"
        },
        {
            "name": "release",
            "inherits": "base",
            "displayName": "Relase configure preset",
            "description": "Release Build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "release-vcpkg",
            "inherits": "base",
            "displayName": "Relase configure preset",
            "description": "Release Build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "debug-vcpkg",
            "configurePreset": "debug-vcpkg"
        },
        {
            "name": "github",
            "configurePreset": "github"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "release-vcpkg",
            "configurePreset": "release-vcpkg"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "debug-vcpkg",
            "configurePreset": "debug-vcpkg"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "release-vcpkg",
            "configurePreset": "release-vcpkg"
        },
        {
            "name": "github",
            "configurePreset": "github"
        }
    ]
}
